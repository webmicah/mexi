{% schema %}
{
  "name": "Manual collections",
  "class": "shopify-section",
  "max_blocks": 8,
  "settings": [
    {
      "type": "text",
      "id": "sectionID",
      "label": "ID Anchor Tag",
      "default": "shop"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Sub-heading",
      "default": "Manual collection"
    },
    {
      "type": "select",
      "id": "layout_mode",
      "label": "Layout",
      "options": [
        {
          "value": "grid",
          "label": "Grid"
        },
        {
          "value": "carousel",
          "label": "Carousel"
        }
      ],
      "default": "grid"
    },
    {
      "type": "header",
      "content": "Grid",
      "info": "Those settings apply only if the layout mode is set to grid."
    },
    {
      "type": "select",
      "id": "grid_mobile_items_per_row",
      "label": "Products per row (mobile)",
      "options": [
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        }
      ],
      "default": "2"
    },
    {
      "type": "range",
      "min": 2,
      "max": 4,
      "id": "grid_desktop_items_per_row",
      "label": "Products per row (desktop)",
      "default": 4
    },
        {
          "type": "range",
          "id": "grid_items_count",
          "min": 2,
          "max": 50,
          "step": 1,
          "label": "Products to show",
          "default": 8
        }
  ],
  "blocks": [
    {
      "type": "title",
      "name": "title",
      "settings": [
        {
          "type": "image_picker",
          "id": "product_image",
          "label": "Product Image"
        },
        {
          "type": "image_picker",
          "id": "product_image_comingsoon",
          "label": "Product Image Coming Soon"
        },
        {
          "type": "checkbox",
          "id": "temporary_img",
          "label": "Placeholder for Image",
          "info": "For products that do not have product photography",
          "default": false
        },
        {
          "type": "text",
          "id": "title",
          "label": "Product Title",
          "info": "12 pk - 2. 75 per can"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Add to Bag"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Product Link"
        },
        {
          "type": "checkbox",
          "id": "trigger_popup",
          "label": "Trigger Klaviyo Popup if Out if Stock",
          "info": "popup must first be setup in Klaviyo for this to work",
          "default": false
        },
        {
          "type": "color",
          "id": "hover_bg",
          "label": "Hover Transparent Background",
          "default": "#931A1D "
        },
        {
          "type": "color",
          "id": "button_bg_color",
          "label": "Button Background Color"
        },
        {
          "type": "image_picker",
          "id": "product_bg_banner",
          "label": "Background Banner"
        },
        {
          "type": "image_picker",
          "id": "product_bg_banner2",
          "label": "Background Banner 2"
        },
        {
          "type": "checkbox",
          "id": "low_opacity",
          "label": "Low Opacity",
          "default": true
        }
      ]
    }
  ]
}
{% endschema %}