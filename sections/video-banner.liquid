        "label": "Video muted"
        },
        {
            "type": "image_picker",
            "id": "accent_img",
            "label": "Accent image"
        },
        {
          "type": "header",
          "content": "Text"
        },
        {
          "type": "richtext",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "body_text",
          "label": "Body"
        },
        {
            "type": "color",
            "id": "text_color",
            "label": "Text Color"
        },
        {
          "type": "url",
          "id": "btn_url",
          "label": "Button url"
        },
        {
          "type": "text",
