        },
        {
        "type": "color",
        "id": "btn_bg_color",
        "label": "Button Background Color"
        },
        {
        "type": "color",
        "id": "btn_text_color",
        "label": "Button Text Color"
        }
      ]
    }
  {% endschema %}
