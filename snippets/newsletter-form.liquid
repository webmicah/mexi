.klaviyo_condensed_styling.klaviyo_gdpr_embed_LIST_ID .klaviyo_submit_button:hover svg * {
    stroke: #fff;
}
.kl-form {
    background: #FFFFFF;
    border: 2px solid #000000;
    border-radius: 8px;
    /* transform: rotate(0.28deg); */
    display: inline-flex;
    width: 100%;
}
.klaviyo_form {
  width: 100%;
  display: block;
  max-width: 100% !important;
}
.klaviyo_form input[type=email] {
  width: 100% !important;
  display: block;
  max-width: 100%;
}
</style>
<script type="text/javascript" src="//www.klaviyo.com/media/js/public/klaviyo_subscribe.js"></script>
<script type="text/javascript">
KlaviyoSubscribe.attachToForms('#email_signup', {
    hide_form_on_success: true,
    extra_properties: {
        $source: '$embed',
        $method_type: "Klaviyo Form",
        $method_id: 'embed',
        $consent_version: 'Embed default text'
    }
});
</script>